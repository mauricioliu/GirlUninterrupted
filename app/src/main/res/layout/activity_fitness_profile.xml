<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="magpie.com.girluninterrupted.FitnessProfileActivity" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What type of fitness do you do?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="run"
        android:id="@+id/runCheckBox"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:checked="false"
        android:paddingLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="walk"
        android:id="@+id/walkCheckBox"
        android:textSize="20dp"
        android:checked="false"
        android:paddingLeft="10dp"
        android:layout_below="@+id/runCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:longClickable="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yoga"
        android:id="@+id/yogaCheckBox"
        android:textSize="20dp"
        android:checked="false"
        android:paddingLeft="10dp"
        android:longClickable="false"
        android:layout_below="@+id/walkCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pilates"
        android:id="@+id/pilatesCheckBox"
        android:textSize="20dp"
        android:checked="false"
        android:paddingLeft="10dp"
        android:longClickable="false"
        android:layout_below="@+id/yogaCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="crossfit"
        android:id="@+id/crossfitCheckBox"
        android:textSize="20dp"
        android:checked="false"
        android:paddingLeft="10dp"
        android:longClickable="false"
        android:layout_below="@+id/pilatesCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="none"
        android:id="@+id/noneCheckBox"
        android:textSize="20dp"
        android:checked="false"
        android:paddingLeft="10dp"
        android:longClickable="false"
        android:layout_below="@+id/crossfitCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=">>>"
        android:id="@+id/nextLabel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:clickable="true"
        android:textColor="#ff0000fd" />

</RelativeLayout>
